<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.save.sharelocation.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:id="@+id/mapLo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sms to :"
                />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="phone Number"
            android:gravity="center"
            android:layout_weight="4"
            android:inputType="number"
            android:id="@+id/editText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Set Time :"
                />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Pick Time"
            android:layout_weight="4"
            android:gravity="center"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address :"
                />
        <EditText
            android:id="@+id/etLocationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Location Name"
            android:layout_weight="4"
            android:gravity="center"
            />
        </LinearLayout>
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userNameNumberLo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:background="#188354"
        android:visibility="visible"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="@dimen/text_size_for_edit_text"
            android:background="@drawable/border"
            android:hint="@string/user_name"

            />

        <EditText
            android:id="@+id/etUserNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/text_size_for_edit_text"
            android:padding="7dp"
            android:background="@drawable/border"
            android:hint="@string/user_number"

            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_btn"
            android:textAllCaps="false"
            android:onClick="btnRegister"
            />
    </LinearLayout>


</LinearLayout>
